<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".stadium_detail">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wallpaper"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:clickable="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Media -->
                    <ImageView
                        android:id="@+id/cardImg"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:scaleType="centerCrop"
                        app:srcCompat="@drawable/stadium1" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="65dp"
                        android:layout_marginBottom="0dp"
                        android:orientation="vertical"
                        android:padding="16dp">

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/stadiumName"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:text="Stadium1"-->
                        <!--                            android:textAppearance="?attr/textAppearanceHeadline6"-->
                        <!--                            android:textColor="#fff"-->
                        <!--                            android:textSize="20sp" />-->

                        <!--                        <TextView-->
                        <!--                            android:id="@+id/date"-->
                        <!--                            android:layout_width="wrap_content"-->
                        <!--                            android:layout_height="wrap_content"-->
                        <!--                            android:layout_marginTop="8dp"-->
                        <!--                            android:text="15/08/2565"-->
                        <!--                            android:textColor="#fff"-->
                        <!--                            android:textSize="14sp" />-->


                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <!--            <TextView-->
            <!--                android:id="@+id/price"-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_margin="8dp"-->
            <!--                android:text="ราคา: 1600 บาท"-->
            <!--                android:textColor="#fff"-->
            <!--                android:textSize="16sp"></TextView>-->

            <!--            <TextView-->
            <!--                android:layout_width="wrap_content"-->
            <!--                android:layout_height="wrap_content"-->
            <!--                android:layout_marginLeft="8dp"-->
            <!--                android:layout_marginTop="8dp"-->
            <!--                android:text="รูปภาพสลิปชำระเงิน"-->
            <!--                android:textColor="#fff"-->
            <!--                android:textSize="16sp"></TextView>-->
            <TextView
                android:id="@+id/stadiumIdDPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="ไอดีสนาม : "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/stadiumNameDPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="ชื่อสนาม : "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/stadiumPriceDPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="ราคา:"
                android:textColor="@color/white"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/stadiumDetailDPage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:text="รายละเอียด : "
                android:textColor="@color/white"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="100dp"
                android:orientation="horizontal"
                android:weightSum="5">

                <Button
                    android:id="@+id/btnEdit"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="10dp"
                    android:layout_weight="4"
                    android:backgroundTint="#00D681"
                    android:letterSpacing="0"
                    android:onClick="editStadiumPage"
                    android:padding="10dp"
                    android:text="Edit"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    app:cornerRadius="10dp"
                    tools:ignore="OnClick" />

                <Button
                    android:id="@+id/btnDelete"
                    style="@style/Widget.MaterialComponents.Button"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:backgroundTint="#DA2424"
                    android:letterSpacing="0"
                    android:onClick="deleteStadium"
                    android:padding="10dp"
                    android:textAllCaps="false"
                    android:textSize="16sp"
                    app:cornerRadius="10dp"
                    android:text="delete"
                    app:iconGravity="textStart"
                    app:iconPadding="0dp"
                    tools:ignore="OnClick" />


            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</RelativeLayout>



