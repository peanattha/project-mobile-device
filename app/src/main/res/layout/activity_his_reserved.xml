<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/wallpaper"
        android:scaleType="centerCrop"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.google.android.material.card.MaterialCardView
                android:id="@+id/card"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/TextPage"
                android:clickable="true"
                android:layout_margin="8dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <!-- Media -->
                    <ImageView
                        android:id="@+id/cardImg"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        app:srcCompat="@drawable/stadium1"
                        android:scaleType="centerCrop"
                        />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="65dp"
                        android:padding="16dp">

                        <TextView
                            android:id="@+id/stadiumName"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Stadium1"
                            android:textSize="20sp"
                            android:textAppearance="?attr/textAppearanceHeadline6"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/date"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:text="15/08/2565"
                            android:textSize="14sp"
                            android:textColor="#fff" />

                        <TextView
                            android:id="@+id/time"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="8dp"
                            android:textSize="14sp"
                            android:text="13.00 - 15.00 น."
                            android:textColor="#fff" />

                    </LinearLayout>
                </RelativeLayout>
            </com.google.android.material.card.MaterialCardView>

            <TextView
                android:id="@+id/price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="ราคา: 1600 บาท"
                android:layout_margin="8dp"
                android:textSize="16sp"
                android:textColor="#fff">
            </TextView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="รูปภาพสลิปชำระเงิน"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:textSize="16sp"
                android:textColor="#fff">
            </TextView>

            <ImageView
                android:id="@+id/slip"
                android:layout_width="200dp"
                android:layout_height="300dp"
                android:layout_gravity="center"
                android:layout_marginLeft="8dp"
                app:srcCompat="@drawable/slip_payment" />

            <Button
                android:id="@+id/btnCancel"
                style="@style/Widget.MaterialComponents.Button"
                android:layout_gravity="center"
                android:text="btn"
                android:layout_width="360dp"
                android:layout_height="60dp"
                android:layout_marginTop="12dp"
                android:backgroundTint="#293462"
                android:textAllCaps="true"
                android:textStyle="bold"
                android:textSize="20sp"
                app:cornerRadius="10dp"
                app:strokeColor="@color/white" />
        </LinearLayout>
    </ScrollView>
</RelativeLayout>